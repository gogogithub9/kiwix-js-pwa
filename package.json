{
  "name": "kiwix_js_windows",
  "productName": "Kiwix JS for Windows Electron Edition",
  "version": "1.0.0",
  "description": "Kiwix JS Windows for NWJS",
  "main": "www/index.html",
  "domain": "kiwix.js.windows",
  "scripts": {
    "start-nwjs": "C:\\UTILS\\nwjs-sdk-v0.14.7-win-ia32\\nw.exe .",
    "dist-winxp": "build --tasks win-x86 --mirror https://dl.nwjs.io/ .",
    "start": "run --x86 --mirror https://dl.nwjs.io/ ."
  },
  "build": {
    "nwVersion": "0.14.7",
    "output": "bld/nwjs/win-x86",
    "targets": [ "zip" ],
    "excludes": [
      "**/archives/*",
      "**/AppPackages/*",
      "**/BundleArtifacts/*",
      "**/images/*",
      "**/bin/*",
      "**/bld/*",
      "**/{ KiwixWebApp.*, [pP]ackage.[aSl] }"
    ] 
  },
  "repository": "https://github.com/kiwix/kiwix-js-windows",
  "keywords": [
    "Kiwix",
    "offline",
    "Wikipedia",
    "ZIM",
    "reader"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.15.0"
  }
}
